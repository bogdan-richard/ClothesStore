<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dd.casestudy.clothesstore" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.StoreListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.CartListActivity"
                android:label="@string/menu_cart" >
        </activity>
        <uses-library android:name="android.test.runner" />
        <instrumentation
            android:name="android.test.ActivityInstrumentationTestCase2"
            android:targetPackage="dd.casestudy.clothesstore" />
    </application>

</manifest>
